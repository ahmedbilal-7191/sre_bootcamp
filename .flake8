[flake8]
max-line-length = 120
extend-ignore =
    E501,
    E402,
    W292,
    W293,
    E303,
    E302,
    E266,
    F401,
    F403,
    E251,
    E231,
    E262,
    E261

per-file-ignores =
    app/models/__init__.py:F401
    app/routes/__init__.py:F401
    app/schemas/__init__.py:F401
    app/services/__init__.py:F401,F403
